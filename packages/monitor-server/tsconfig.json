{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "esnext",
    "allowUnreachableCode": true,
    "allowUnusedLabels": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/",
    "lib": [
      "ESNext"
    ],
    "paths": {},
    "types": []
  },
  "include": [
    "src/**/*",
    "src/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}